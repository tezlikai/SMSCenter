<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/tv_conversation_detail_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12:34pm"
		android:textSize="14sp"
		android:textColor="#ffffff"
		android:background="@drawable/bg_conversation_detail_date"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:layout_marginTop="8dp"
		android:layout_gravity="center_horizontal"
		/>
	<TextView
		android:id="@+id/tv_conversation_detail_receive"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="20dp"
		android:background="@mipmap/bg_receive_sms"
		android:text="算算算算算算算算算算算算算算算算算算算算算算"
		android:textSize="16dp"
		android:textColor="#ffffff"
		android:paddingLeft="10dp"
		android:paddingTop="10dp"
		android:paddingRight="10dp"
		android:paddingBottom="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		/>
	<TextView
		android:id="@+id/tv_conversation_detail_send"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="70dp"
		android:background="@mipmap/bg_send_sms"
		android:text="阿打卡机的"
		android:textColor="#000000"
		android:textSize="16dp"
		android:paddingLeft="5dp"
		android:paddingTop="5dp"
		android:paddingRight="25dp"
		android:paddingBottom="5dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_gravity="right"
		/>
</LinearLayout>